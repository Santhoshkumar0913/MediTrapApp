<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@drawable/background">

    <!-- Back Arrow -->
    <ImageView
        android:id="@+id/backArrow"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/ic_back"
        android:contentDescription="Back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Title -->
    <TextView
        android:id="@+id/titleAddMedicine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Medicine"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#1E293B"
        app:layout_constraintTop_toTopOf="@id/backArrow"
        app:layout_constraintBottom_toBottomOf="@id/backArrow"
        app:layout_constraintStart_toEndOf="@id/backArrow"
        android:layout_marginStart="12dp" />

    <!-- Main ScrollView -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/backArrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Medicine Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medicine Name"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#1E293B"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/etMedicineName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter medicine name"
                android:padding="12dp"
                android:background="@drawable/edittext_bg"
                android:layout_marginBottom="24dp" />

            <!-- Dosage Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dosage"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#1E293B"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:background="@drawable/rounded_border"
                android:padding="4dp"
                android:layout_marginBottom="20dp">

                <ImageButton
                    android:id="@+id/btnDecrease"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_minus"
                    android:contentDescription="Decrease dosage" />

                <EditText
                    android:id="@+id/etDosage"
                    android:layout_width="50dp"
                    android:layout_height="38dp"
                    android:text="1"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:background="@android:color/transparent"
                    android:inputType="number"
                    android:maxLength="3"
                    android:textColor="#1E293B" />

                <ImageButton
                    android:id="@+id/btnIncrease"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_plus"
                    android:contentDescription="Increase dosage" />
            </LinearLayout>

            <!-- Take Medicine -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="When To Take Medicine"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#1E293B"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <CheckBox
                    android:id="@+id/cbBeforeMeal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Before Meal"
                    android:textSize="16sp"
                    android:textColor="#1E293B"
                    android:padding="12dp"
                    android:background="@drawable/edittext_bg"
                    android:layout_marginEnd="8dp"
                    android:buttonTint="#2563EB" />

                <CheckBox
                    android:id="@+id/cbAfterMeal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="After Meal"
                    android:textSize="16sp"

                    android:textColor="#1E293B"
                    android:padding="12dp"
                    android:background="@drawable/edittext_bg"
                    android:layout_marginStart="8dp"
                    android:buttonTint="#2563EB" />
            </LinearLayout>

            <!-- Frequency Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Schedule"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#1E293B"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/btnCustom"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Custom"
                android:textAllCaps="false"
                android:backgroundTint="#2563EB"
                android:textColor="#FFFFFF"
                app:cornerRadius="12dp"
                android:layout_marginBottom="16dp" />

            <!-- Fragment Container for Frequency Options -->
            <FrameLayout
                android:id="@+id/fragmentContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp" />

            <!-- Medication Duration -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medication Duration"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#1E293B"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="From"
                        android:textSize="12sp"
                        android:textColor="#64748B"
                        android:layout_marginBottom="4dp" />

                    <Button
                        android:id="@+id/btnFromDate"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="DD / MM / YY"
                        android:textAllCaps="false"
                        android:backgroundTint="#F8FAFC"
                        android:textColor="#64748B"
                        app:cornerRadius="8dp"
                        app:strokeWidth="1dp"
                        app:strokeColor="#E5E7EB" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="To"
                        android:textSize="12sp"
                        android:textColor="#64748B"
                        android:layout_marginBottom="4dp" />

                    <Button
                        android:id="@+id/btnToDate"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="DD / MM / YY"
                        android:textAllCaps="false"
                        android:backgroundTint="#F8FAFC"
                        android:textColor="#64748B"
                        app:cornerRadius="8dp"
                        app:strokeWidth="1dp"
                        app:strokeColor="#E5E7EB" />
                </LinearLayout>
            </LinearLayout>

            <!-- Reminders Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Reminders Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_clock"
                            android:contentDescription="Reminders"
                            app:tint="#2563EB" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Reminders"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#1E293B"
                            android:layout_marginStart="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Enable"
                            android:textSize="14sp"
                            android:textColor="#64748B"
                            android:layout_marginEnd="8dp" />

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/switchReminder"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            app:thumbTint="#2563EB"
                            app:trackTint="#BFDBFE" />
                    </LinearLayout>

                    <!-- Reminder Times Container -->
                    <LinearLayout
                        android:id="@+id/containerReminderTimes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="12dp">

                        <!-- Default reminder time item -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardReminderTime1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="0dp"
                            android:layout_marginBottom="8dp"
                            android:background="#F8FAFC">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="12dp"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:src="@drawable/ic_clock"
                                    android:contentDescription="Time"
                                    android:background="@drawable/circle_background"
                                    android:padding="6dp"
                                    app:tint="#FFFFFF" />

                                <TextView
                                    android:id="@+id/tvReminderTime1"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Select Time"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="#64748B"
                                    android:layout_marginStart="12dp"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:background="?android:attr/selectableItemBackground"
                                    android:padding="8dp" />

                                <ImageView
                                    android:id="@+id/btnDeleteTime1"
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/ic_delete"
                                    android:layout_marginStart="8dp"
                                    android:contentDescription="Delete time"
                                    android:visibility="gone"
                                    app:tint="#EF4444"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:background="?android:attr/selectableItemBackgroundBorderless"
                                    android:padding="4dp" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <!-- Add Another Time Button -->
                    <Button
                        android:id="@+id/btnAddAnotherTime"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="Add Another Time"
                        android:textAllCaps="false"
                        android:backgroundTint="#F8FAFC"
                        android:textColor="#2563EB"
                        app:cornerRadius="12dp"
                        app:strokeWidth="1dp"
                        app:strokeColor="#E5E7EB"
                        android:drawableStart="@drawable/ic_plus"
                        android:drawableTint="#2563EB"
                        android:drawablePadding="8dp"
                        android:gravity="center" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Save Medicine Button -->
            <Button
                android:id="@+id/btnSaveMedicine"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Save Medicine"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textStyle="bold"
                android:backgroundTint="#2563EB"
                android:textColor="#FFFFFF"
                app:cornerRadius="12dp"
                android:layout_marginBottom="24dp" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
