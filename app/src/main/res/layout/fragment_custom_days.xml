<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/fragment_bg">

    <!-- Header with Back Arrow and Title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="12dp">

        <ImageView
            android:id="@+id/backArrowCustom"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_back"
            android:contentDescription="Back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Custom Schedule"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#1E293B" />
    </LinearLayout>

    <!-- Section Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Days"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#1E293B"
        android:layout_marginBottom="12dp" />

    <!-- Days of the week -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:divider="?android:attr/dividerHorizontal"
        android:showDividers="middle"
        android:dividerPadding="4dp">

        <CheckBox
            android:id="@+id/cbMonday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Monday"
            android:textSize="15sp"
            android:textColor="#374151"
            android:buttonTint="#2563EB"
            android:padding="8dp" />

        <CheckBox
            android:id="@+id/cbTuesday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tuesday"
            android:textSize="15sp"
            android:textColor="#374151"
            android:buttonTint="#2563EB"
            android:padding="8dp" />

        <CheckBox
            android:id="@+id/cbWednesday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wednesday"
            android:textSize="15sp"
            android:textColor="#374151"
            android:buttonTint="#2563EB"
            android:padding="8dp" />

        <CheckBox
            android:id="@+id/cbThursday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thursday"
            android:textSize="15sp"
            android:textColor="#374151"
            android:buttonTint="#2563EB"
            android:padding="8dp" />

        <CheckBox
            android:id="@+id/cbFriday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Friday"
            android:textSize="15sp"
            android:textColor="#374151"
            android:buttonTint="#2563EB"
            android:padding="8dp" />

        <CheckBox
            android:id="@+id/cbSaturday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Saturday"
            android:textSize="15sp"
            android:textColor="#374151"
            android:buttonTint="#2563EB"
            android:padding="8dp" />

        <CheckBox
            android:id="@+id/cbSunday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sunday"
            android:textSize="15sp"
            android:textColor="#374151"
            android:buttonTint="#2563EB"
            android:padding="8dp" />
    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E5E7EB"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp" />

    <!-- Times per day (Dosage Style) -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Times per selected day"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#1E293B"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:id="@+id/layoutTimesPerDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:background="@drawable/rounded_border"
        android:padding="4dp"
        android:layout_marginBottom="20dp">

        <ImageButton
            android:id="@+id/btnDecreaseCustomFreq"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_minus"
            android:contentDescription="Decrease frequency" />

        <EditText
            android:id="@+id/etCustomFreq"
            android:layout_width="80dp"
            android:layout_height="48dp"
            android:text="1"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@android:color/transparent"
            android:inputType="number"
            android:maxLength="2"
            android:textColor="#1E293B" />

        <ImageButton
            android:id="@+id/btnIncreaseCustomFreq"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_plus"
            android:contentDescription="Increase frequency" />
    </LinearLayout>

    <!-- Continue Button -->
    <Button
        android:id="@+id/btnContinue"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Continue"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textStyle="bold"
        android:backgroundTint="#2563EB"
        android:textColor="#FFFFFF"
        app:cornerRadius="12dp"
        android:layout_marginTop="24dp" />

</LinearLayout>
