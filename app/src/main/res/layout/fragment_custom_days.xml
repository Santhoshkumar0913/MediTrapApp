<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Header with Back Arrow and Title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="12dp">

        <ImageView
            android:id="@+id/backArrowCustom"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_back"
            android:contentDescription="Back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Custom Schedule"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#1E293B" />
    </LinearLayout>

    <!-- Section Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Days"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#1E293B"
        android:layout_marginBottom="12dp" />

    <!-- Days of the week -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:divider="?android:attr/dividerHorizontal"
        android:showDividers="middle"
        android:dividerPadding="4dp">

        <CheckBox
            android:id="@+id/cbMonday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Monday"
            android:textSize="15sp"
            android:textColor="#374151"
            android:buttonTint="#2563EB"
            android:padding="8dp" />

        <CheckBox
            android:id="@+id/cbTuesday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tuesday"
            android:textSize="15sp"
            android:textColor="#374151"
            android:buttonTint="#2563EB"
            android:padding="8dp" />

        <CheckBox
            android:id="@+id/cbWednesday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wednesday"
            android:textSize="15sp"
            android:textColor="#374151"
            android:buttonTint="#2563EB"
            android:padding="8dp" />

        <CheckBox
            android:id="@+id/cbThursday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thursday"
            android:textSize="15sp"
            android:textColor="#374151"
            android:buttonTint="#2563EB"
            android:padding="8dp" />

        <CheckBox
            android:id="@+id/cbFriday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Friday"
            android:textSize="15sp"
            android:textColor="#374151"
            android:buttonTint="#2563EB"
            android:padding="8dp" />

        <CheckBox
            android:id="@+id/cbSaturday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Saturday"
            android:textSize="15sp"
            android:textColor="#374151"
            android:buttonTint="#2563EB"
            android:padding="8dp" />

        <CheckBox
            android:id="@+id/cbSunday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sunday"
            android:textSize="15sp"
            android:textColor="#374151"
            android:buttonTint="#2563EB"
            android:padding="8dp" />
    </LinearLayout>

    <!-- Frequency -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Frequency"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#1E293B"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="20dp">

        <Spinner
            android:id="@+id/spinnerFrequency"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/rounded_border"
            android:spinnerMode="dropdown"
            android:padding="8dp" />
    </LinearLayout>

    <!-- Continue Button -->
    <Button
        android:id="@+id/btnContinue"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Continue"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textStyle="bold"
        android:backgroundTint="#2563EB"
        android:textColor="#FFFFFF"
        app:cornerRadius="12dp"
        android:layout_marginTop="24dp" />

</LinearLayout>
